<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Dropdown for chart type selection -->
    <Spinner
        android:id="@+id/spinnerChartType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/chart_type_options"/>

    <!-- Date Range Filter -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnLast24Hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last 24 Hours" />

        <Button
            android:id="@+id/btnLast7Days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last 7 Days" />

        <Button
            android:id="@+id/btnLast30Days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last 30 Days" />

        <Button
            android:id="@+id/btnCustomRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Range" />
    </LinearLayout>

    <!-- Chart View Area -->
    <FrameLayout
        android:id="@+id/chartContainer"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <!-- Summary Panel for Min/Max/Average Values -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/textMinTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Temp: N/A" />

        <TextView
            android:id="@+id/textMaxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Temp: N/A" />

        <TextView
            android:id="@+id/textAvgTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avg Temp: N/A" />
    </LinearLayout>
</LinearLayout>



