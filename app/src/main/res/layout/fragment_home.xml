<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/greenhouseBackground"
    android:padding="24dp">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Greenhouse Monitoring"
        android:textSize="26sp"
        android:textColor="@color/greenhousePrimaryText"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:gravity="center" />

    <!-- Temperature Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tempCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/cardStrokeColor"
        app:strokeWidth="1dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/cardBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/tempIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_thermostat_24"
                app:tint="@color/tempIconColor" />

            <!-- Title -->
            <TextView
                android:id="@+id/tempLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textSize="18sp"
                android:textColor="@color/greenhouseSecondaryText"
                android:layout_marginTop="10dp" />

            <!-- Value -->
            <TextView
                android:id="@+id/tempValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/greenhouseValueText"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Moisture Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/moistureCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/cardStrokeColor"
        app:strokeWidth="1dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/cardBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/moistureIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_water_drop_24"
                app:tint="@color/moistureIconColor" />

            <!-- Title -->
            <TextView
                android:id="@+id/moistureLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soil Moisture"
                android:textSize="18sp"
                android:textColor="@color/greenhouseSecondaryText"
                android:layout_marginTop="10dp" />

            <!-- Value -->
            <TextView
                android:id="@+id/moistureValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/greenhouseValueText"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
